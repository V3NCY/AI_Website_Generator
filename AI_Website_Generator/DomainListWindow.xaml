<Window x:Class="AI_Website_Generator.DomainListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registered Domains" Height="500" Width="700" Background="#ECF0F1">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="🌐 Уебсайт домейни" FontSize="22" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,10"/>
            <ListBox Name="DomainsList" Height="300" BorderThickness="1" BorderBrush="#BDC3C7"/>
            <Button Content="Refresh Domains" Click="RefreshDomains_Click" Background="#3498DB" Foreground="White" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
