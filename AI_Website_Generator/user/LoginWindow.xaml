<Window x:Class="AI_Website_Generator.user.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход"
        Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Grid Background="Transparent">
        <!-- Gradient Background -->
        <Border CornerRadius="15" Margin="20">
            <!--<Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#8E44AD" Offset="0.0"/>
                    <GradientStop Color="#3498DB" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>-->
        </Border>

        <!-- Login Panel -->
        <Border Background="White" CornerRadius="12" Width="300" Height="240" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="20">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="5" BlurRadius="15" Opacity="0.3" />
            </Border.Effect>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="🔐 Вход в системата" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" TextAlignment="Center" Margin="0,0,0,10"/>

                <TextBlock Text="Потребител:" FontWeight="SemiBold"/>
                <TextBox x:Name="txtUsername" Margin="0,0,0,10" Padding="5" FontSize="14" BorderBrush="#BDC3C7" BorderThickness="1" />

                <TextBlock Text="Парола:" FontWeight="SemiBold"/>
                <PasswordBox x:Name="txtPassword" Margin="0,0,0,15" Padding="5" FontSize="14" BorderBrush="#BDC3C7" BorderThickness="1" />

                <Button Content="Вход" Click="Login_Click" Background="#3498DB" Foreground="White" 
                        FontWeight="Bold" Padding="8" BorderThickness="0" Cursor="Hand" 
                        HorizontalAlignment="Right" Width="80">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#3498DB"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2980B9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
