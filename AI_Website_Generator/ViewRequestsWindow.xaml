<Window x:Class="AI_Website_Generator.ViewRequestsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AI_Website_Generator"
        Title="Заявки"
        Height="600"
        Width="1000"
        Background="#ECF0F1"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Window.Resources>
        <local:StatusToColorConverter x:Key="StatusToColorConverter"/>

        <DropShadowEffect x:Key="ShadowEffect" BlurRadius="12" ShadowDepth="3" Opacity="0.18"/>

        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="BorderBrush" Value="#E6ECEF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect" Value="{StaticResource ShadowEffect}"/>
        </Style>

        <Style x:Key="HeaderTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>

        <Style x:Key="HeaderSubTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#5D6D7E"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GhostButton" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Background" Value="#ECF0F1"/>
            <Setter Property="BorderBrush" Value="#D5DEE3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Border Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,12">
                    <TextBlock Text="📜 Заявки" Style="{StaticResource HeaderTitle}"/>
                    <TextBlock Text="Десен клик: смяна на статус | Двоен клик: коментар | Deploy: автоматично"
                               Style="{StaticResource HeaderSubTitle}"/>
                </StackPanel>

                <!-- Toolbar -->
                <Grid Grid.Row="1" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="🔄 Обнови"
                            Click="Refresh_Click"
                            Style="{StaticResource PrimaryButton}"
                            MinWidth="160"/>

                    <Button Grid.Column="2"
                            Content="Затвори"
                            Click="CloseWindow_Click"
                            Style="{StaticResource GhostButton}"
                            MinWidth="160"/>
                </Grid>

                <!-- List -->
                <ListView x:Name="RequestsList"
                          Grid.Row="2"
                          ItemsSource="{Binding Requests}"
                          MouseRightButtonUp="RequestsList_MouseRightButtonUp"
                          MouseDoubleClick="RequestsList_MouseDoubleClick">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Клиент" DisplayMemberBinding="{Binding Client}" Width="160"/>
                            <GridViewColumn Header="Телефон" DisplayMemberBinding="{Binding Phone}" Width="130"/>
                            <GridViewColumn Header="Имейл" DisplayMemberBinding="{Binding Email}" Width="200"/>
                            <GridViewColumn Header="Код по НЕИСПУО" DisplayMemberBinding="{Binding Code}" Width="130"/>
                            <GridViewColumn Header="Обект" DisplayMemberBinding="{Binding Institute}" Width="220"/>
                            <GridViewColumn Header="Населено място" DisplayMemberBinding="{Binding City}" Width="140"/>
                            <GridViewColumn Header="Стар домейн" DisplayMemberBinding="{Binding PrevDomain}" Width="170"/>
                            <GridViewColumn Header="Нов домейн" DisplayMemberBinding="{Binding NewDomain}" Width="170"/>

                            <GridViewColumn Header="Статус" Width="220">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="10"
                                                Padding="8,4"
                                                Margin="2"
                                                Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}">
                                            <TextBlock Text="{Binding Status}"
                                                       Foreground="White"
                                                       FontWeight="SemiBold"
                                                       ToolTip="{Binding Comment}"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Действие" Width="120">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="🚀 Deploy"
                                                Click="DeployTemplate_Click"
                                                Tag="{Binding}"
                                                Background="#27AE60"
                                                Foreground="White"
                                                FontWeight="Bold"
                                                Padding="6,4"
                                                Margin="4"
                                                Cursor="Hand"
                                                BorderThickness="0"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Темплейт" DisplayMemberBinding="{Binding Template}" Width="130"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <!-- Footer -->
                <TextBlock Grid.Row="3"
                           Margin="0,12,0,0"
                           Text="ℹ️ Ако искаш търсачка (филтър), ще я добавим след като потвърдим, че XAML файлът е правилният."
                           Foreground="#5D6D7E"
                           FontSize="12"/>
            </Grid>
        </Border>
    </Grid>
</Window>
