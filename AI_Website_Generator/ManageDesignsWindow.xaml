<Window x:Class="AI_Website_Generator.ManageDesignsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Темплейти" Height="200" Width="700" Background="#ECF0F1">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="🎨 Управление на Темплейти" FontSize="22" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,10"/>
            <ListBox Name="TemplateList" SelectionChanged="TemplateList_SelectionChanged">
                <ListBoxItem Tag="templates/templateA.html">Template A - Modern Business</ListBoxItem>
                <ListBoxItem Tag="templates/templateB.html">Template B - Creative Agency</ListBoxItem>
                <ListBoxItem Tag="templates/templateC.html">Template C - Online Store</ListBoxItem>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>