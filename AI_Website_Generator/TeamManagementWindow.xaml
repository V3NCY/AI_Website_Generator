<Window x:Class="AI_Website_Generator.TeamManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Екип" Height="500" Width="700" Background="#ECF0F1">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="👥 Управление на Екипа" FontSize="22" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,10"/>

            <!-- Team List -->
            <ListView Name="TeamList" BorderThickness="1" BorderBrush="#BDC3C7" Height="350">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Име" DisplayMemberBinding="{Binding Name}" Width="200"/>
                        <GridViewColumn Header="Роля" DisplayMemberBinding="{Binding Role}" Width="200"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Window>
