<Window x:Class="AI_Website_Generator.TeamManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Екип" Height="620" Width="980"
        Background="#ECF0F1"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <SolidColorBrush x:Key="Card" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="Ink" Color="#2C3E50"/>
        <SolidColorBrush x:Key="Muted" Color="#7F8C8D"/>
        <SolidColorBrush x:Key="Line" Color="#D5DDE5"/>
        <SolidColorBrush x:Key="Primary" Color="#2D9CDB"/>
        <SolidColorBrush x:Key="Danger" Color="#E74C3C"/>

        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Card}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Line}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="16"/>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="BorderBrush" Value="{StaticResource Line}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#FBFDFF"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{StaticResource Ink}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource Primary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.92"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GhostButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Foreground" Value="{StaticResource Ink}"/>
            <Setter Property="Background" Value="#EEF4F8"/>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="{StaticResource Danger}"/>
        </Style>

        <!-- Row role coloring (your original idea, but works in table) -->
        <Style x:Key="RowStyle" TargetType="ListViewItem">
            <Setter Property="Foreground" Value="{StaticResource Ink}"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Role}" Value="Designer">
                    <Setter Property="Background" Value="#D1E8FF"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Role}" Value="Request Picker">
                    <Setter Property="Background" Value="#FCE5CD"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Role}" Value="Tech Team">
                    <Setter Property="Background" Value="#D9EAD3"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Role}" Value="Tester">
                    <Setter Property="Background" Value="#FFF2CC"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Role}" Value="Seller">
                    <Setter Property="Background" Value="#F4CCCC"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="GridViewColumnHeader">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource Ink}"/>
            <Setter Property="Padding" Value="8,6"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDEBAR -->
        <Border Grid.Column="0" Style="{StaticResource CardBorder}">
            <StackPanel>
                <TextBlock Text="👥 Екип" FontSize="20" FontWeight="Bold" Foreground="{StaticResource Ink}"/>
                <TextBlock Text="Филтри по роли" Margin="0,6,0,14" Foreground="{StaticResource Muted}"/>

                <Button Content="Всички" Style="{StaticResource GhostButton}" Click="FilterAll_Click" Margin="0,0,0,10"/>
                <Button Content="Designer" Style="{StaticResource GhostButton}" Click="FilterDesigner_Click" Margin="0,0,0,10"/>
                <Button Content="Request Picker" Style="{StaticResource GhostButton}" Click="FilterPicker_Click" Margin="0,0,0,10"/>
                <Button Content="Tech Team" Style="{StaticResource GhostButton}" Click="FilterTech_Click" Margin="0,0,0,10"/>
                <Button Content="Tester" Style="{StaticResource GhostButton}" Click="FilterTester_Click" Margin="0,0,0,10"/>
                <Button Content="Seller" Style="{StaticResource GhostButton}" Click="FilterSeller_Click"/>

                <Border Margin="0,16,0,0" BorderBrush="{StaticResource Line}" BorderThickness="0,1,0,0"/>

                <TextBlock Text="⚡ Бързи действия" Margin="0,14,0,10" Foreground="{StaticResource Muted}"/>
                <Button Content="⟳ Обнови" Style="{StaticResource GhostButton}" Click="Refresh_Click"/>
            </StackPanel>
        </Border>

        <!-- RIGHT MAIN -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Style="{StaticResource CardBorder}">
                <StackPanel>
                    <TextBlock Text="Управление на Екипа" FontSize="22" FontWeight="Bold" Foreground="{StaticResource Ink}"/>
                    <TextBlock Text="Търсене + сортиране без да се чупи ItemsSource." Foreground="{StaticResource Muted}" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Toolbar -->
            <Border Grid.Row="2" Style="{StaticResource CardBorder}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="SearchBox" Style="{StaticResource ModernTextBox}" />

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="12,0,0,0">
                        <Button Content="🔍 Търси" Style="{StaticResource PrimaryButton}" Click="Search_Click" Margin="0,0,10,0"/>
                        <Button Content="➕ Добави" Style="{StaticResource GhostButton}" Click="AddTeamMember_Click" Margin="0,0,10,0"/>
                        <Button Content="✏️ Редактирай" Style="{StaticResource GhostButton}" Click="EditTeamMember_Click" Margin="0,0,10,0"/>
                        <Button Content="🗑️ Премахни" Style="{StaticResource DangerButton}" Click="RemoveTeamMember_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Table -->
            <Border Grid.Row="4" Style="{StaticResource CardBorder}">
                <ListView x:Name="TeamList"
                          ItemContainerStyle="{StaticResource RowStyle}"
                          BorderThickness="0">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="420">
                                <GridViewColumnHeader Content="Име" />
                                <GridViewColumn.DisplayMemberBinding>
                                    <Binding Path="Name"/>
                                </GridViewColumn.DisplayMemberBinding>
                            </GridViewColumn>

                            <GridViewColumn Width="220">
                                <GridViewColumnHeader Content="Роля" />
                                <GridViewColumn.DisplayMemberBinding>
                                    <Binding Path="Role"/>
                                </GridViewColumn.DisplayMemberBinding>
                            </GridViewColumn>

                            <GridViewColumn Width="120">
                                <GridViewColumnHeader>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Име ⏶⏷" Style="{StaticResource GhostButton}"
                                                Height="30" Padding="10,0" Click="SortByName_Click"/>
                                    </StackPanel>
                                </GridViewColumnHeader>
                            </GridViewColumn>

                            <GridViewColumn Width="120">
                                <GridViewColumnHeader>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Роля ⏶⏷" Style="{StaticResource GhostButton}"
                                                Height="30" Padding="10,0" Click="SortByRole_Click"/>
                                    </StackPanel>
                                </GridViewColumnHeader>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>
        </Grid>
    </Grid>
</Window>
