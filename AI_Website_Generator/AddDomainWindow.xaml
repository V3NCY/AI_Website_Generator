<Window x:Class="AI_Website_Generator.AddDomainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добави нов уебсайт"
        Height="900"
        Width="1200"
        Background="#ECF0F1"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>

        <DropShadowEffect x:Key="ShadowEffect" BlurRadius="12" ShadowDepth="3" Opacity="0.18"/>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Margin" Value="0,10,0,6"/>
        </Style>

        <Style x:Key="TextInput" TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="10,7"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#F7F9F9"/>
            <Setter Property="BorderBrush" Value="#D5DEE3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ComboInput" TargetType="ComboBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#F7F9F9"/>
            <Setter Property="BorderBrush" Value="#D5DEE3"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="DateInput" TargetType="DatePicker">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="6,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#F7F9F9"/>
            <Setter Property="BorderBrush" Value="#D5DEE3"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="46"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1E8449"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Height" Value="46"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Background" Value="#ECF0F1"/>
            <Setter Property="BorderBrush" Value="#D5DEE3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E6ECEF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="22"/>
            <Setter Property="BorderBrush" Value="#E6ECEF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect" Value="{StaticResource ShadowEffect}"/>
        </Style>

        <Style x:Key="SectionCard" TargetType="Border" BasedOn="{StaticResource Card}">
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.10"/>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Margin="20">
        <Border Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,14">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="🌐 Добави нов уебсайт"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="#2C3E50"/>
                        <TextBlock Text="Попълнете данните за обекта и домейна. Полетата са групирани за по-лесно въвеждане."
                                   FontSize="13"
                                   Foreground="#5D6D7E"
                                   Margin="0,6,0,0"/>
                    </StackPanel>

                    <Button Grid.Column="1"
                            Content="✖"
                            Width="40"
                            Height="40"
                            FontSize="14"
                            FontWeight="Bold"
                            Background="#ECF0F1"
                            BorderBrush="#D5DEE3"
                            BorderThickness="1"
                            Foreground="#2C3E50"
                            Cursor="Hand"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"/>
                </Grid>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{StaticResource SectionCard}">
                            <StackPanel>

                                <TextBlock Text="🏢 Данни за обекта" Style="{StaticResource SectionTitle}"/>

                                <TextBlock Text="Обект:" Style="{StaticResource FieldLabel}"/>
                                <TextBox Name="txtOwner" Style="{StaticResource TextInput}"/>

                                <TextBlock Text="Населено място:" Style="{StaticResource FieldLabel}"/>
                                <TextBox Name="txtCity" Style="{StaticResource TextInput}"/>

                                <TextBlock Text="Код по НЕИСПУО:" Style="{StaticResource FieldLabel}"/>
                                <TextBox Name="txtCode" Style="{StaticResource TextInput}"/>

                                <TextBlock Text="МОЛ:" Style="{StaticResource FieldLabel}"/>
                                <TextBox Name="txtMol" Style="{StaticResource TextInput}"/>

                                <TextBlock Text="Телефон за контакт:" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtPhone" Style="{StaticResource TextInput}"/>

                                <TextBlock Text="Обект имейл:" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtOwnerEmail" Style="{StaticResource TextInput}"/>

                                <TextBlock Text="Пакет:" Style="{StaticResource FieldLabel}"/>
                                <ComboBox x:Name="cmbPackage" Style="{StaticResource ComboInput}">
                                    <ComboBoxItem Content="Старт" />
                                    <ComboBoxItem Content="Стандарт" />
                                    <ComboBoxItem Content="Стандарт +" />
                                </ComboBox>

                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Style="{StaticResource SectionCard}">
                            <StackPanel>

                                <TextBlock Text="🧩 Домейн и достъп" Style="{StaticResource SectionTitle}"/>

                                <TextBlock Text="Стар домейн:" Style="{StaticResource FieldLabel}"/>
                                <TextBox Name="txtOldDomainName" Style="{StaticResource TextInput}"/>

                                <TextBlock Text="Нов домейн:" Style="{StaticResource FieldLabel}"/>
                                <TextBox Name="txtNewDomainName" Style="{StaticResource TextInput}"/>

                                <TextBlock Text="Admin username:" Style="{StaticResource FieldLabel}"/>
                                <TextBox Name="txtAdminUsername" Style="{StaticResource TextInput}"/>

                                <TextBlock Text="Admin password:" Style="{StaticResource FieldLabel}"/>
                                <TextBox Name="txtAdminPassword" Style="{StaticResource TextInput}"/>

                                <TextBlock Text="Дата на регистрация на тестов домейн:" Style="{StaticResource FieldLabel}"/>
                                <DatePicker Name="dateRegTestDomain" Style="{StaticResource DateInput}"/>

                                <TextBlock Text="Дата на регистрация на официален домейн:" Style="{StaticResource FieldLabel}"/>
                                <DatePicker Name="dateRegOfficialDomain" Style="{StaticResource DateInput}"/>

                                <TextBlock Text="Хостинг пространство по договор:" Style="{StaticResource FieldLabel}"/>
                                <ComboBox x:Name="cmbHosting" Style="{StaticResource ComboInput}">
                                    <ComboBoxItem Content="10GB" />
                                    <ComboBoxItem Content="25GB" />
                                    <ComboBoxItem Content="50GB" />
                                </ComboBox>

                                <TextBlock Text="Поел от екипа:" Style="{StaticResource FieldLabel}"/>
                                <ComboBox x:Name="cmbRequestTeam"
                                          Style="{StaticResource ComboInput}"
                                          DisplayMemberPath="Name"
                                          SelectedValuePath="Name"/>

                            </StackPanel>
                        </Border>
                    </Grid>
                </ScrollViewer>

                <Grid Grid.Row="2" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="ℹ️ Съвет: попълнете домейна и датите, за да може системата да следи срокове (SSL/изтичане)."
                               Foreground="#5D6D7E"
                               FontSize="12"
                               VerticalAlignment="Center"/>

                    <Button Grid.Column="1"
                            Content="Отказ"
                            Style="{StaticResource SecondaryButton}"
                            Width="140"/>

                    <Button Grid.Column="3"
                            Content="✅ Добави уебсайт"
                            Click="AddDomain_Click"
                            Style="{StaticResource PrimaryButton}"
                            Width="220"/>
                </Grid>

            </Grid>
        </Border>
    </Grid>

</Window>
