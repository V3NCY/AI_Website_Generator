<Window x:Class="AI_Website_Generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AI_Website_Generator"
        Title="ORAK WebPro"
        Width="1500"
        Height="900"
        Background="#ECF0F1"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>

        <!-- =======================================================
             CONVERTERS
             ======================================================= -->
        <local:ChatBubbleColorMultiConverter x:Key="ChatBubbleColorMultiConverter"/>
        <local:ChatAlignmentConverter x:Key="ChatAlignmentConverter"/>

        <!-- =======================================================
             CHAT MESSAGE TEMPLATE
             ======================================================= -->
        <DataTemplate x:Key="ChatMessageTemplate">
            <Border CornerRadius="10"
                    Padding="10"
                    Margin="5"
                    MaxWidth="520"
                    HorizontalAlignment="{Binding IsMe, Converter={StaticResource ChatAlignmentConverter}}">
                <Border.Background>
                    <MultiBinding Converter="{StaticResource ChatBubbleColorMultiConverter}">
                        <Binding Path="IsMe"/>
                        <Binding Path="IsLatest"/>
                    </MultiBinding>
                </Border.Background>

                <StackPanel>
                    <TextBlock Text="{Binding Message}"
                               TextWrapping="Wrap"
                               FontSize="14"
                               Foreground="#2C3E50"/>

                    <TextBlock Text="{Binding Time}"
                               FontSize="10"
                               Foreground="#7F8C8D"
                               HorizontalAlignment="Right"
                               Margin="0,6,0,0"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- =======================================================
             SIDEBAR BUTTONS (BASE + VARIANTS)
             ======================================================= -->
        <Style x:Key="SidebarButtonBase" TargetType="Button">
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Blue Sidebar -->
        <Style x:Key="SidebarButton" TargetType="Button" BasedOn="{StaticResource SidebarButtonBase}">
            <Setter Property="Background" Value="#3498DB"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Purple Sidebar -->
        <Style x:Key="SidebarButtonAlt" TargetType="Button" BasedOn="{StaticResource SidebarButtonBase}">
            <Setter Property="Background" Value="#9B59B6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#8E44AD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Green Sidebar -->
        <Style x:Key="SidebarButtonGreen" TargetType="Button" BasedOn="{StaticResource SidebarButtonBase}">
            <Setter Property="Background" Value="#27AE60"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- =======================================================
             DASHBOARD CARD
             ======================================================= -->
        <Style x:Key="DashboardCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Width" Value="260"/>
            <Setter Property="Height" Value="110"/>
            <Setter Property="BorderBrush" Value="#EEF2F5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.18"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- =======================================================
             CHIP / HEADER PANEL (User Info)
             ======================================================= -->
        <Style x:Key="TopChip" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderBrush" Value="#E6ECEF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="8" Opacity="0.12"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- =======================================================
             PRIMARY BUTTON (Main content)
             ======================================================= -->
        <Style x:Key="PrimaryActionButton" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#0B5394"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#073763"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Smaller header button (Refresh) -->
        <Style x:Key="HeaderSmallButton" TargetType="Button" BasedOn="{StaticResource PrimaryActionButton}">
            <Setter Property="Height" Value="34"/>
            <Setter Property="MinWidth" Value="92"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- =======================================================
             TEXTBOX (Chat input)
             ======================================================= -->
        <Style x:Key="ChatTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="10,7"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#D5DEE3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Sidebar bottom card (for Chatbot placement) -->
        <Style x:Key="SidebarBottomCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#253646"/>
            <Setter Property="BorderBrush" Value="#3B556A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="6,10,6,6"/>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- =======================================================
             SIDEBAR (chatbot moved here under AI Статистика)
             ======================================================= -->
        <Border Grid.Column="0" Background="#2C3E50" Padding="14">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Sidebar Header -->
                <StackPanel Grid.Row="0" Margin="0,6,0,10">
                    <TextBlock Text="📌 Административен панел"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="8,0,8,10"/>
                    <Separator Background="#95A5A6" Height="1" Margin="8,0,8,10"/>
                </StackPanel>

                <!-- Menu Buttons -->
                <StackPanel Grid.Row="1">
                    <Button Content="➕ Добави уебсайт" Click="AddNewDomain_Click" Style="{StaticResource SidebarButton}" />
                    <Button Content="🌍 Списък уебсайтове" Click="OpenDomainList_Click" Style="{StaticResource SidebarButton}" />
                    <Button Content="📜 Заявки" Click="btnViewRequests_Click" Style="{StaticResource SidebarButton}"/>
                    <Button Content="🎨 Темплейти" Click="btnManageDesigns_Click" Style="{StaticResource SidebarButton}" />
                    <Button Content="🛠️ Поддръжка" Click="btnTechSupport_Click" Style="{StaticResource SidebarButton}" />
                    <Button Content="👥 Екип" Click="btnManageTeam_Click" Style="{StaticResource SidebarButtonAlt}" />
                    <Button Content="📊 AI Статистика" Click="OpenWebsiteStatistics_Click" Style="{StaticResource SidebarButtonGreen}" />
                </StackPanel>

                <!-- Chatbot Quick Access (under the menus) -->
                <Border Grid.Row="2" Style="{StaticResource SidebarBottomCard}">
                    <StackPanel>
                        <TextBlock Text="🤖 Чатбот асистент"
                                   Foreground="White"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Margin="2,0,2,6"/>
                        <TextBlock Text="Бърз достъп до помощ и насоки."
                                   Foreground="#C9D6E2"
                                   FontSize="12"
                                   Margin="2,0,2,10"/>
                        <Button Content="Линк към чатбот"
                                Click="OpenChatbotWindow_Click"
                                Style="{StaticResource SidebarButtonGreen}"
                                Margin="0"/>
                    </StackPanel>
                </Border>

            </Grid>
        </Border>

        <!-- =======================================================
             MAIN CONTENT
             ======================================================= -->
        <Grid Grid.Column="1">

            <Border Background="White" Padding="22" CornerRadius="14" Margin="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Top row: User Info -->
                    <Border Grid.Row="0"
                            Style="{StaticResource TopChip}"
                            HorizontalAlignment="Right"
                            Margin="0,0,0,14">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="30" Height="30" Fill="#95A5A6"/>
                            <TextBlock Text="{Binding CurrentUsername}"
                                       FontWeight="Bold"
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"
                                       Foreground="#2C3E50"/>
                        </StackPanel>
                    </Border>

                    <!-- Header -->
                    <StackPanel Grid.Row="1" Margin="2,0,2,14">
                        <TextBlock Text="👋 Добре дошли в ORAK WebPro"
                                   FontSize="26"
                                   FontWeight="Bold"
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,6"/>
                        <TextBlock Text="📌 Изберете опция от менюто вляво, за да започнете работа."
                                   FontSize="16"
                                   Foreground="#34495E"/>
                    </StackPanel>

                    <!-- Dashboard -->
                    <UniformGrid Grid.Row="2" Columns="3" Margin="0,10,0,18">
                        <Border Style="{StaticResource DashboardCard}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="🖥️ Активни уебсайтове"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#2C3E50"/>
                                <TextBlock Grid.Row="1"
                                           Text="12"
                                           FontSize="30"
                                           FontWeight="Bold"
                                           Foreground="#27AE60"
                                           VerticalAlignment="Bottom"/>
                            </Grid>
                        </Border>

                        <Border Style="{StaticResource DashboardCard}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="📌 Отворени заявки"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#2C3E50"/>
                                <TextBlock Grid.Row="1"
                                           Text="4"
                                           FontSize="30"
                                           FontWeight="Bold"
                                           Foreground="#E67E22"
                                           VerticalAlignment="Bottom"/>
                            </Grid>
                        </Border>

                        <Border Style="{StaticResource DashboardCard}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="🛠️ Технически проблеми"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#2C3E50"/>
                                <TextBlock Grid.Row="1"
                                           Text="1"
                                           FontSize="30"
                                           FontWeight="Bold"
                                           Foreground="#C0392B"
                                           VerticalAlignment="Bottom"/>
                            </Grid>
                        </Border>
                    </UniformGrid>

                    <!-- =======================================================
                         CHAT SECTION (refresh smaller + input fixed)
                         ======================================================= -->
                    <Border Grid.Row="3"
                            Background="White"
                            BorderBrush="#E6ECEF"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="14">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Header row -->
                            <Grid Grid.Row="0" Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="💬 Екипен чат"
                                           FontWeight="Bold"
                                           FontSize="18"
                                           Foreground="#2C3E50"
                                           VerticalAlignment="Center"/>

                                <Button Grid.Column="1"
                                        Content="🔃 Refresh"
                                        Click="RefreshChat_Click"
                                        Style="{StaticResource HeaderSmallButton}"/>
                            </Grid>

                            <!-- Messages -->
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <ItemsControl x:Name="ChatMessages" ItemTemplate="{StaticResource ChatMessageTemplate}"/>
                            </ScrollViewer>

                            <!-- Input row (no weird sizing) -->
                            <Grid Grid.Row="2" Margin="0,12,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                                         x:Name="ChatInput"
                                         Style="{StaticResource ChatTextBox}"
                                         KeyDown="ChatInput_KeyDown"/>

                                <Button Grid.Column="2"
                                        Content="Изпрати"
                                        Click="SendChatMessage_Click"
                                        Style="{StaticResource PrimaryActionButton}"
                                        Width="120"/>
                            </Grid>
                        </Grid>
                    </Border>

                </Grid>
            </Border>

            <!-- Logo (kept, but sent behind so it doesn't cover the chat/send button) -->
            <Image Source="images/Orak-Academy-Logo-Remake-2024.png"
                   Width="180"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Margin="18"
                   Opacity="0.9"
                   IsHitTestVisible="False"
                   Panel.ZIndex="-1"/>
        </Grid>
    </Grid>
</Window>
