<Window x:Class="AI_Website_Generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AI_Website_Generator"
        Title="ORAK WebPro"
        Width="1500"
        Height="900"
        Background="#ECF0F1"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>

        <local:ChatBubbleColorMultiConverter x:Key="ChatBubbleColorMultiConverter"/>
        <local:ChatAlignmentConverter x:Key="ChatAlignmentConverter"/>

        <DataTemplate x:Key="ChatMessageTemplate">
            <Border CornerRadius="10"
                    Padding="10"
                    Margin="5"
                    MaxWidth="520"
                    HorizontalAlignment="{Binding IsMe, Converter={StaticResource ChatAlignmentConverter}}">
                <Border.Background>
                    <MultiBinding Converter="{StaticResource ChatBubbleColorMultiConverter}">
                        <Binding Path="IsMe"/>
                        <Binding Path="IsLatest"/>
                    </MultiBinding>
                </Border.Background>

                <StackPanel>
                    <TextBlock Text="{Binding Message}"
                               TextWrapping="Wrap"
                               FontSize="14"
                               Foreground="#2C3E50"/>

                    <TextBlock Text="{Binding Time}"
                               FontSize="10"
                               Foreground="#7F8C8D"
                               HorizontalAlignment="Right"
                               Margin="0,6,0,0"/>
                </StackPanel>
            </Border>
        </DataTemplate>


        <Style x:Key="SidebarButtonBase" TargetType="Button">
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SidebarButton" TargetType="Button" BasedOn="{StaticResource SidebarButtonBase}">
            <Setter Property="Background" Value="#3498DB"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SidebarButtonAlt" TargetType="Button" BasedOn="{StaticResource SidebarButtonBase}">
            <Setter Property="Background" Value="#9B59B6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#8E44AD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SidebarButtonGreen" TargetType="Button" BasedOn="{StaticResource SidebarButtonBase}">
            <Setter Property="Background" Value="#27AE60"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ============================  DASHBOARD CARD =========================== -->
        <Style x:Key="DashboardCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Width" Value="260"/>
            <Setter Property="Height" Value="110"/>
            <Setter Property="BorderBrush" Value="#EEF2F5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.18"/>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="TopChip" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderBrush" Value="#E6ECEF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="8" Opacity="0.12"/>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="PrimaryActionButton" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#0B5394"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#073763"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryActionButtonLight" TargetType="Button" BasedOn="{StaticResource PrimaryActionButton}">
            <Setter Property="Background" Value="#1F6FB2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#165A8F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ==================== System info ========================= -->
        <Style x:Key="StatusPill" TargetType="Border">
            <Setter Property="CornerRadius" Value="999"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>

        <!-- ========================= sidebar bottom =================================== -->
        <Style x:Key="SidebarBottomCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#253646"/>
            <Setter Property="BorderBrush" Value="#3B556A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="6,10,6,6"/>
        </Style>

        <!-- ========================== Action center ============================== -->
        <Style x:Key="PanelCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="BorderBrush" Value="#E6ECEF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="10" Opacity="0.10"/>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ============================= Sidebar =========================== -->
        <Border Grid.Column="0" Background="#2C3E50" Padding="14">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,6,0,10">
                    <TextBlock Text="📌 Административен панел"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="8,0,8,10"/>
                    <Separator Background="#95A5A6" Height="1" Margin="8,0,8,10"/>
                </StackPanel>

                <StackPanel Grid.Row="1">
                    <Button Content="➕ Добави уебсайт" Click="AddNewDomain_Click" Style="{StaticResource SidebarButton}" />
                    <Button Content="🌍 Списък уебсайтове" Click="OpenDomainList_Click" Style="{StaticResource SidebarButton}" />
                    <Button Content="📜 Заявки" Click="btnViewRequests_Click" Style="{StaticResource SidebarButton}"/>
                    <Button Content="🎨 Темплейти" Click="btnManageDesigns_Click" Style="{StaticResource SidebarButton}" />
                    <Button Content="🛠️ Поддръжка" Click="btnTechSupport_Click" Style="{StaticResource SidebarButton}" />
                    <Button Content="👥 Екип" Click="btnManageTeam_Click" Style="{StaticResource SidebarButtonAlt}" />
                    <Button Content="📊 AI Статистика" Click="OpenWebsiteStatistics_Click" Style="{StaticResource SidebarButtonGreen}" />
                </StackPanel>

                <!-- chatbot assistant -->
                <Border Grid.Row="2" Style="{StaticResource SidebarBottomCard}">
                    <StackPanel>
                        <TextBlock Text="🤖 Чатбот асистент"
                                   Foreground="White"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Margin="2,0,2,6"/>
                        <TextBlock Text="Бърз достъп до помощ и насоки."
                                   Foreground="#C9D6E2"
                                   FontSize="12"
                                   Margin="2,0,2,10"/>
                        <Button Content="Линк към чатбот"
                                Click="OpenChatbotWindow_Click"
                                Style="{StaticResource SidebarButtonGreen}"
                                Margin="0"/>
                    </StackPanel>
                </Border>

            </Grid>
        </Border>

        <!-- =========================== main content ========================== -->
        <Grid Grid.Column="1">

            <Border Background="White" Padding="22" CornerRadius="14" Margin="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- user info bubble -->
                    <Border Grid.Row="0"
                            Style="{StaticResource TopChip}"
                            HorizontalAlignment="Right"
                            Margin="0,0,0,14">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="30" Height="30" Fill="#95A5A6"/>
                            <TextBlock Text="{Binding CurrentUsername}"
                                       FontWeight="Bold"
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"
                                       Foreground="#2C3E50"/>
                        </StackPanel>
                    </Border>

                    <!-- header -->
                    <StackPanel Grid.Row="1" Margin="2,0,2,14">
                        <TextBlock Text="👋 Добре дошли в ORAK WebPro"
                                   FontSize="26"
                                   FontWeight="Bold"
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,6"/>
                        <TextBlock Text="📌 Изберете опция от менюто вляво, за да започнете работа."
                                   FontSize="16"
                                   Foreground="#34495E"/>
                    </StackPanel>

                    <!-- dashboard -->
                    <UniformGrid Grid.Row="2" Columns="3" Margin="0,10,0,18">
                        <Border Style="{StaticResource DashboardCard}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="🖥️ Активни уебсайтове"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#2C3E50"/>
                                <TextBlock Grid.Row="1"
                                           Text="12"
                                           FontSize="30"
                                           FontWeight="Bold"
                                           Foreground="#27AE60"
                                           VerticalAlignment="Bottom"/>
                            </Grid>
                        </Border>

                        <Border Style="{StaticResource DashboardCard}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="📌 Отворени заявки"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#2C3E50"/>
                                <TextBlock Grid.Row="1"
                                           Text="4"
                                           FontSize="30"
                                           FontWeight="Bold"
                                           Foreground="#E67E22"
                                           VerticalAlignment="Bottom"/>
                            </Grid>
                        </Border>

                        <Border Style="{StaticResource DashboardCard}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="🛠️ Технически проблеми"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#2C3E50"/>
                                <TextBlock Grid.Row="1"
                                           Text="1"
                                           FontSize="30"
                                           FontWeight="Bold"
                                           Foreground="#C0392B"
                                           VerticalAlignment="Bottom"/>
                            </Grid>
                        </Border>
                    </UniformGrid>

                    <!-- ======================================================= -->
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- action center -->
                        <Border Grid.Column="0" Style="{StaticResource PanelCard}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0">
                                    <TextBlock Text="🎯 Action Center"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="#2C3E50"/>
                                    <TextBlock Text="Бърз преглед и действия по текущата работа."
                                               FontSize="13"
                                               Foreground="#5D6D7E"
                                               Margin="0,4,0,0"/>
                                </StackPanel>

                                <!-- quick counters -->
                                <WrapPanel Grid.Row="1" Margin="0,12,0,0">
                                    <Border Style="{StaticResource StatusPill}" Background="#FFF3E6" BorderBrush="#F2D6B3">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="📌 Отворени заявки: " Foreground="#8E5A00" FontWeight="SemiBold"/>
                                            <TextBlock Text="4" Foreground="#8E5A00" FontWeight="Bold"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Style="{StaticResource StatusPill}" Background="#FFECEC" BorderBrush="#F3BABA">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="🛠 Проблеми: " Foreground="#8B1E1E" FontWeight="SemiBold"/>
                                            <TextBlock Text="1" Foreground="#8B1E1E" FontWeight="Bold"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Style="{StaticResource StatusPill}" Background="#EAF6FF" BorderBrush="#BFDFF5">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="🖥 Активни: " Foreground="#0B4A74" FontWeight="SemiBold"/>
                                            <TextBlock Text="12" Foreground="#0B4A74" FontWeight="Bold"/>
                                        </StackPanel>
                                    </Border>
                                </WrapPanel>

                                <!-- suggested actions -->
                                <Border Grid.Row="2"
                                        Background="#F7FAFC"
                                        BorderBrush="#E6ECEF"
                                        BorderThickness="1"
                                        CornerRadius="10"
                                        Padding="12"
                                        Margin="0,12,0,0">
                                    <StackPanel>
                                        <TextBlock Text="✅ Препоръчани действия"
                                                   FontSize="14"
                                                   FontWeight="Bold"
                                                   Foreground="#2C3E50"
                                                   Margin="0,0,0,8"/>

                                        <StackPanel Margin="0,0,0,6">
                                            <TextBlock Text="• Провери отворените заявки и обнови статусите." Foreground="#34495E" FontSize="13"/>
                                            <TextBlock Text="• Прегледай техническите проблеми и назначи отговорник." Foreground="#34495E" FontSize="13"/>
                                            <TextBlock Text="• Отвори AI статистика за бърз overview." Foreground="#34495E" FontSize="13"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- spacer -->
                                <Grid Grid.Row="3"/>

                                <!-- actions -->
                                <UniformGrid Grid.Row="4" Columns="2" Margin="50,20,50,0">
                                    <Button Content="Отвори заявки"
                                            Click="btnViewRequests_Click"
                                            Style="{StaticResource PrimaryActionButton}"
                                            Margin="0,0,8,0"/>

                                    <Button Content="Поддръжка"
                                            Click="btnTechSupport_Click"
                                            Style="{StaticResource PrimaryActionButtonLight}"
                                            Margin="0,0,8,0"/>
                                </UniformGrid>
                            </Grid>
                        </Border>

                        <!-- SYSTEM HEALTH / TRUST -->
                        <Border Grid.Column="2" Style="{StaticResource PanelCard}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0">
                                    <TextBlock Text="🛡 System Health / Trust"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="#2C3E50"/>
                                    <TextBlock Text="Състояние на системата, синхронизации и ключови сигнали."
                                               FontSize="13"
                                               Foreground="#5D6D7E"
                                               Margin="0,4,0,0"/>
                                </StackPanel>

                                <!-- status list -->
                                <StackPanel Grid.Row="1" Margin="0,12,0,0">

                                    <Border Background="#EFFFF3" BorderBrush="#BFE8C8" BorderThickness="1" CornerRadius="10" Padding="12" Margin="0,0,0,10">
                                        <DockPanel>
                                            <TextBlock Text="✅" FontSize="16" DockPanel.Dock="Left" Margin="0,0,10,0"/>
                                            <StackPanel>
                                                <TextBlock Text="Backups" FontWeight="Bold" Foreground="#1E6B3A"/>
                                                <TextBlock Text="Последен бекъп: OK" Foreground="#1E6B3A" FontSize="12"/>
                                            </StackPanel>
                                            <TextBlock Text="преди 12 мин" Foreground="#1E6B3A" FontSize="12" DockPanel.Dock="Right" VerticalAlignment="Center"/>
                                        </DockPanel>
                                    </Border>

                                    <Border Background="#EAF6FF" BorderBrush="#BFDFF5" BorderThickness="1" CornerRadius="10" Padding="12" Margin="0,0,0,10">
                                        <DockPanel>
                                            <TextBlock Text="✅" FontSize="16" DockPanel.Dock="Left" Margin="0,0,10,0"/>
                                            <StackPanel>
                                                <TextBlock Text="Синхронизация" FontWeight="Bold" Foreground="#0B4A74"/>
                                                <TextBlock Text="Web/данни: актуални" Foreground="#0B4A74" FontSize="12"/>
                                            </StackPanel>
                                            <TextBlock Text="преди 5 мин" Foreground="#0B4A74" FontSize="12" DockPanel.Dock="Right" VerticalAlignment="Center"/>
                                        </DockPanel>
                                    </Border>

                                    <Border Background="#FFF3E6" BorderBrush="#F2D6B3" BorderThickness="1" CornerRadius="10" Padding="12">
                                        <DockPanel>
                                            <TextBlock Text="⚠️" FontSize="16" DockPanel.Dock="Left" Margin="0,0,10,0"/>
                                            <StackPanel>
                                                <TextBlock Text="Домейни / SSL" FontWeight="Bold" Foreground="#8E5A00"/>
                                                <TextBlock Text="1 обект изисква преглед скоро" Foreground="#8E5A00" FontSize="12"/>
                                            </StackPanel>
                                            <TextBlock Text="внимание" Foreground="#8E5A00" FontSize="12" DockPanel.Dock="Right" VerticalAlignment="Center"/>
                                        </DockPanel>
                                    </Border>

                                </StackPanel>

                                <!-- spacer -->
                                <Grid Grid.Row="3"/>

                                <!-- actions -->
                                <UniformGrid Grid.Row="4" Columns="2" Margin="50,20,50,0">
                                    <Button Content="AI Статистика"
                                            Click="OpenWebsiteStatistics_Click"
                                            Style="{StaticResource PrimaryActionButton}"
                                            Margin="0,0,8,0"/>

                                    <Button Content="Списък уебсайтове"
                                            Click="OpenDomainList_Click"
                                            Style="{StaticResource PrimaryActionButtonLight}"
                                            Margin="0,0,8,0"/>
                                </UniformGrid>
                            </Grid>
                        </Border>

                    </Grid>

                </Grid>
            </Border>

            <!-- Logo (kept behind so it doesn't cover UI) -->
            <Image Source="images/Orak-Academy-Logo-Remake-2024.png"
                   Width="180"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Margin="18"
                   Opacity="0.9"
                   IsHitTestVisible="False"
                   Panel.ZIndex="-1"/>
        </Grid>
    </Grid>
</Window>
